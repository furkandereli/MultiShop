@model List<ResultOrderingByUserIdDto>

@{
    ViewData["Title"] = "MyOrderList";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
    string[] rowsClasses =
    {
        "table-primary",
        "table-info",
        "table-success",
        "table-warning",
        "table-danger"
    };
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sipariş Geçmişi</h4>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Toplam Fiyat</th>
                                        <th>Sipariş Tarihi</th>
                                        <th>Sipariş Detayları</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        string rowClass = rowsClasses[(count - 1) % rowsClasses.Length];
                                        <tr class=@rowClass>
                                            <th>@count</th>
                                            <td>@item.TotalPrice</td>
                                            <td>@(((DateTime)item.OrderDate).ToString("dd-MMM-yyyy"))</td>
                                            <td><a href="#" class="btn btn-primary btn-smaller">Sipariş Detayları</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>