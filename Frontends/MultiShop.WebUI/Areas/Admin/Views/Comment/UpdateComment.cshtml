@model UpdateCommentDto

@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="UserCommentId" />
                        <input type="hidden" asp-for="ProductId" />
                        <label>Kullanıcı Adı ve Soyadı</label>
                        <input type="text" asp-for="NameSurname" class="form-control" />
                        <br />
                        <label>Kullanıcı Görsel</label>
                        <input type="text" asp-for="ImageUrl" class="form-control" />
                        <br />
                        <label>Email Adresi</label>
                        <input type="text" asp-for="Email" class="form-control" />
                        <br />
                        <label>Kullanıcı Puanı</label>
                        <input type="number" asp-for="Rating" class="form-control" />
                        <br />
                        <label>Yorum Tarihi</label>
                        <input type="date" asp-for="CreatedDate" class="form-control" />
                        <br />
                        <label>Yorum</label>
                        <textarea class="form-control" rows="3" asp-for="CommentDetail"></textarea>
                        <br />
                        <button class="btn btn-primary">Yorumu Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
