@model UpdateCargoCompanyDto

@{
    ViewData["Title"] = "UpdateCargoCompany";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kargo Şirketi Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="CargoCompanyId" />
                        <label>Kargo Şirketi Adı</label>
                        <input type="text" asp-for="CargoCompanyName" class="form-control" />
                        <br />
                        <button class="btn btn-primary">Kargo Şirketini Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>